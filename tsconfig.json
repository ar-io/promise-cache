{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [ 
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
